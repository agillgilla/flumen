doctype html
html
  head
    title #{title}
    link(rel='stylesheet', href='css/style.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.2.0/animate.min.css')

    link(rel="icon" type="image/png" href="img/favicon.png")

    script(src="https://code.jquery.com/jquery-3.5.0.min.js"
    integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ="
    crossorigin="anonymous")

    script(type='text/javascript', src='js/app.js')
    script(type='text/javascript', src='js/sorttable.js')
  body
    h1 Flumen
    h2 Queue
    table#queueTable.darkTable
      thead
          tr
            th
            th
            th
            th Title
            th Artist
            th Album
            th
              span.fa.fa-clock-o
        tbody
    h2 Songs
    section.playlistSection
      table#playlistTable.darkTable.sortable
        thead
          tr
            th
            th
            th Title
            th Artist
            th Album
            th
              span.fa.fa-clock-o
        tbody
    div#footer
      .song-info
        span#currSong
        br
        br
        span#currArtist
      .action
        a.shuffle.active(href='#')
          i.fa.fa-random
        a.previous.jcarousel-prev(href='#')
          i.fa.fa-step-backward
        a.play(href='#')
          i.fa.fa-play.fa-fw
        a.next.jcarousel-next(href='#')
          i.fa.fa-step-forward
        a.replay(href='#')
          i.fa.fa-refresh
        .length
          span#current-time --:--
          span#total-time --:--
          input#timeSlider(type='range', min='0', max='1000', value='0', step='.1')
          output.duration(for='timeSlider')
      .volume-slider
        div#volume-div.volume-slider-inner
          i.fa.fa-volume-down
          input#fader.volume-slider(type='range', min='0', max='100', value='100', step='1', oninput='outputUpdate(value)')
          i.fa.fa-volume-up
          


